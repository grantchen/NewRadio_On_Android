<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <ListView
        android:id="@+id/programslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/referProgram"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameofprogram" >

    </ListView>

    <Button
        android:id="@+id/referProgram"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="66dp"
        android:text="刷新" />

    <Button
        android:id="@+id/backtoAuthors"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/programslist"
        android:layout_marginRight="76dp"
        android:onClick="backtoAuthors"
        android:text="返回" />

    <TextView
        android:id="@+id/nameofprogram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
